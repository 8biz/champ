{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CHAMP Ruleset",
  "type": "object",
  "required": [
    "metadata",
    "periodTimesInSeconds",
    "periodTimeCountingDirection",
    "periodBreakTimeInSeconds",
    "injuryTimeWithoutBloodInSeconds",
    "injuryTimeWithBloodInSeconds",
    "injuryTimeCountingDirection",
    "victoryTypes"
  ],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["name","description","languages","author"],
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "version": { "type": "string" },
        "languages": { "type": "array", "items": { "type": "string" } },
        "author": { "type": "string" }
      },
      "additionalProperties": false
    },
    "periodTimesInSeconds": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "integer", "minimum": 0 }
    },
    "periodTimeCountingDirection": {
      "type": "string",
      "enum": ["Up","Down"]
    },
    "periodBreakTimeInSeconds": { "type": "integer", "minimum": 0 },
    "injuryTimeWithoutBloodInSeconds": { "type": "integer", "minimum": 0 },
    "injuryTimeWithBloodInSeconds": { "type": "integer", "minimum": 0 },
    "injuryTimeCountingDirection": {
      "type": "string",
      "enum": ["Up","Down"]
    },
    "freestyle": {
      "type": "object",
      "properties": {
        "activityTimeInSeconds": { "type": "integer", "minimum": 0 },
        "activityTimeCountingDirection": { "type": "string", "enum": ["Up","Down"] },
        "activityTimeCondition": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "gte": { "type": "number" },
              "lte": { "type": "number" },
              "gt": { "type": "number" },
              "lt": { "type": "number" },
              "eq": { "type": "number" }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "victoryTypes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type","description","classificationPoints"],
        "properties": {
          "type": { "type": "string" },
          "description": { "type": "string" },
          "classificationPoints": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": { "type": "integer" }
          },
          "condition": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "gte": { "type": "number" },
                "lte": { "type": "number" },
                "gt": { "type": "number" },
                "lt": { "type": "number" },
                "eq": { "type": "number" }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
