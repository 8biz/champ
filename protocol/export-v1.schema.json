{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CHAMP Protocol Export",
  "description": "Export format for CHAMP Protocol bout recordings",
  "type": "object",
  "required": ["exportVersion", "metadata", "bout"],
  "properties": {
    "$schema": { "type": "string" },
    "exportVersion": {
      "type": "string",
      "description": "Export format version",
      "pattern": "^\\d+\\.\\d+$"
    },
    "metadata": {
      "type": "object",
      "required": ["app", "system"],
      "properties": {
        "app": {
          "type": "object",
          "required": ["name", "version"],
          "properties": {
            "name": { "type": "string" },
            "version": { "type": "string" },
            "build": { "type": "string", "format": "date-time" }
          }
        },
        "system": {
          "type": "object",
          "required": ["userAgent", "platform", "language", "timestamp"],
          "properties": {
            "userAgent": { "type": "string" },
            "platform": { "type": "string" },
            "language": { "type": "string" },
            "languages": {
              "type": "array",
              "items": { "type": "string" }
            },
            "viewport": {
              "type": "object",
              "properties": {
                "width": { "type": "integer" },
                "height": { "type": "integer" }
              }
            },
            "timestamp": { "type": "string", "format": "date-time" },
            "timezone": { "type": "string" },
            "timezoneOffset": { "type": "integer" }
          }
        }
      }
    },
    "bout": {
      "type": "object",
      "required": ["header", "summary", "events"],
      "properties": {
        "header": {
          "type": "object",
          "required": ["createdAt", "info", "style", "ruleset", "wrestlers"],
          "properties": {
            "createdAt": { "type": "string", "format": "date-time" },
            "info": { "type": "string" },
            "style": { "type": "string", "enum": ["Freestyle", "Greco-Roman"] },
            "ruleset": {
              "type": "object",
              "required": ["reference"],
              "properties": {
                "reference": { "type": "string" },
                "embedded": { "type": "object" }
              }
            },
            "wrestlers": {
              "type": "object",
              "required": ["red", "blue"],
              "properties": {
                "red": {
                  "type": "object",
                  "required": ["info"],
                  "properties": {
                    "info": { "type": "string" },
                    "parsedInfo": { "type": "object" }
                  }
                },
                "blue": {
                  "type": "object",
                  "required": ["info"],
                  "properties": {
                    "info": { "type": "string" },
                    "parsedInfo": { "type": "object" }
                  }
                }
              }
            }
          }
        },
        "summary": {
          "type": "object",
          "required": ["completed", "duration", "scores", "statistics"],
          "properties": {
            "completed": { "type": "boolean" },
            "completedAt": { "type": "string", "format": "date-time" },
            "duration": {
              "type": "object",
              "required": ["totalBoutTime100ms"],
              "properties": {
                "totalBoutTime100ms": { "type": "integer", "minimum": 0 },
                "totalRealTime": { "type": "integer", "minimum": 0 },
                "periods": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["period", "duration100ms"],
                    "properties": {
                      "period": { "type": "integer", "minimum": 1 },
                      "duration100ms": { "type": "integer", "minimum": 0 }
                    }
                  }
                }
              }
            },
            "scores": {
              "type": "object",
              "required": ["red", "blue"],
              "properties": {
                "red": { "type": "integer", "minimum": 0 },
                "blue": { "type": "integer", "minimum": 0 }
              }
            },
            "winner": {
              "type": "string",
              "enum": ["red", "blue", "draw", "none"]
            },
            "victory": {
              "type": "object",
              "required": ["type", "description", "classificationPoints"],
              "properties": {
                "type": { "type": "string" },
                "description": { "type": "string" },
                "classificationPoints": {
                  "type": "array",
                  "minItems": 2,
                  "maxItems": 2,
                  "items": { "type": "integer" }
                }
              }
            },
            "statistics": {
              "type": "object",
              "required": ["red", "blue", "totalEvents"],
              "properties": {
                "red": { "$ref": "#/definitions/wrestlerStatistics" },
                "blue": { "$ref": "#/definitions/wrestlerStatistics" },
                "totalEvents": { "type": "integer", "minimum": 0 },
                "corrections": { "type": "integer", "minimum": 0 }
              }
            },
            "timeline": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["seq", "eventType"],
                "properties": {
                  "seq": { "type": "integer", "minimum": 1 },
                  "eventType": { "type": "string" },
                  "boutTime100ms": { "type": "integer", "minimum": 0 }
                }
              }
            },
            "notes": { "type": "string" }
          }
        },
        "events": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["seq", "timestamp", "eventType"],
            "properties": {
              "seq": { "type": "integer", "minimum": 1 },
              "timestamp": { "type": "string", "format": "date-time" },
              "eventType": { "type": "string" },
              "boutTime100ms": { "type": "integer", "minimum": 0 },
              "refSeq": { "type": "integer", "minimum": 1 },
              "refSeq1": { "type": "integer", "minimum": 1 },
              "refSeq2": { "type": "integer", "minimum": 1 },
              "newEventType": { "type": "string" },
              "newBoutTime100ms": { "type": "integer", "minimum": 0 },
              "insertedEventType": { "type": "string" },
              "victoryType": { "type": "string" },
              "classificationPoints": {
                "type": "array",
                "minItems": 2,
                "maxItems": 2,
                "items": { "type": "integer" }
              },
              "newContent": { "type": "string" },
              "newTime": { "type": "integer", "minimum": 0 }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "wrestlerStatistics": {
      "type": "object",
      "required": ["technicalPoints", "passivity", "cautions"],
      "properties": {
        "technicalPoints": {
          "type": "object",
          "properties": {
            "1": { "type": "integer", "minimum": 0 },
            "2": { "type": "integer", "minimum": 0 },
            "4": { "type": "integer", "minimum": 0 },
            "5": { "type": "integer", "minimum": 0 }
          }
        },
        "passivity": { "type": "integer", "minimum": 0 },
        "cautions": { "type": "integer", "minimum": 0 },
        "injuryTime100ms": { "type": "integer", "minimum": 0 },
        "bloodTime100ms": { "type": "integer", "minimum": 0 }
      }
    }
  }
}
